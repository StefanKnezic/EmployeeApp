@model EmployeeApp.ViewModels.LocationViewModel

@{
    ViewData["Title"] = "Delete Location";
}

@if (ViewBag.Message != null)
{
    <h4>@ViewBag.Message</h4>
}
else {
<h3>Are you sure you want to delete this?</h3>
}
<div>
    
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameOfWorkplace)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameOfWorkplace)
        </dd>
    </dl>
    
    <form asp-action="DeleteLocation">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListLocation">Back to List of location</a>
    </form>
</div>
