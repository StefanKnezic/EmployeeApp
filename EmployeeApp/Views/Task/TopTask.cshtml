@model IEnumerable<EmployeeApp.Models.EmployeeModel>

@{
    ViewData["Title"] = "Top Task";
    DateTime previousMonth = DateTime.Today.AddMonths(-1);
}

<h2>Employees with the most successful completed tasks of month @previousMonth.ToString("MMMM") </h2>

<p>
    <a asp-action="CreateTask">Create New Task</a>
</p>
<h4>Congrats to: </h4>
<table class="table">
   
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlySalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlySalary)
            </td>
        </tr>
}
    </tbody>
</table>
