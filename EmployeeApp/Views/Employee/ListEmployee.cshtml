@model IEnumerable<EmployeeApp.ViewModels.EmployeeListViewModel>

@{
    ViewData["Title"] = "List Employee";
}

<h1>List of Employee</h1>

<p>
    <a asp-action="CreateEmployee">Create New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlySalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameOfWorkplace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlySalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfWorkplace)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditEmployee", new { id=item.Id }) |
                    @Html.ActionLink("Details", "DetailsEmployee", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteEmployee", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
